<Alloy>
    <Window id="ProductDetailwin" class="container" layout="vertical">
        <Widget id="header" src="header"/>

        <ListView id="dynamicListView" >
            <Templates>
                <ItemTemplate name="image_title" height="Ti.UI.SIZE">
                    <View  layout="vertical"  backgroundColor="white" >


                            <Label bindId="name" class="LabelNamecontainer"/>
                            <Label bindId="catagory" class="Labelcatagorycontainer"/>

                            <View layout="horizontal" height="Ti.UI.SIZE" right="40px">
                              <Label bindId="producer" left="40px" class="LabelProducercontainer"/>
<View  left="60%" layout="horizontal" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
                                <Label  bindId="rate1" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate2" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate3" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate4" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate5" class="falabelRate" text="\uf005"></Label>
                            </View>
</View>
                                <Label bindId="price" class="LabelPricecontainer"/>
                                  <ImageView bindId="imagemain" class="imagemaincontainer" />
                                  <View layout="horizontal" top="20px" height="Ti.UI.SIZE">
                                      <ImageView bindId="image1" class="imagecontainer"  />
                                        <ImageView bindId="image2" class="imagecontainer"  />
                                          <ImageView bindId="image3"  class="imagecontainer" />
                                  </View>
                                  <Label color="#111111" fontSize="30px">Description</Label>
                                  <Label bindId="Description" class="Labeldescription"></Label>
<View top="10px" layout="horizontal">
<Button class="buttonBUY" id="button1" bindId="buy" width="40%" left="10px" onClick="openBuy" title="BUY Now"></Button>
<Button class="buttonBUY" bindId="rate" width="40%" left="10px" onClick="openBuy" title="Rate"></Button>
</View>
                            </View>


                </ItemTemplate>
            </Templates>
            <ListSection/>
        </ListView>
    </Window>
</Alloy>
