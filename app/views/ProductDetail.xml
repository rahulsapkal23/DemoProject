<Alloy>
    <Window id="ProductDetailwin" class="container" layout="vertical">
        <Widget id="header" src="header"/>

        <ListView id="dynamicListView" >
            <Templates>
                <ItemTemplate name="image_title" height="Ti.UI.SIZE">
                    <View  layout="vertical"  backgroundColor="white" >


                            <Label bindId="name" class="LabelNamecontainer"/>
                            <Label bindId="catagory" class="Labelcatagorycontainer"/>

                            <View layout="horizontal" height="100" backgroundColor="lime">
                              <Label bindId="producer" class="LabelProducercontainer"/>

                                <Label  bindId="rate1" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate2" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate3" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate4" class="falabelRate" text="\uf005"></Label>
                                <Label  bindId="rate5" class="falabelRate" text="\uf005"></Label>
                            </View>

                                <Label bindId="price" />
                                  <ImageView bindId="imagemain" top="200px" height="100" />
                                  <View layout="horizontal">
                                      <ImageView bindId="image1" top="400px" height="100" width="100" />
                                        <ImageView bindId="image2" top="400px"  height="100" width="100" />
                                          <ImageView bindId="image3" top="400px"  height="100" width="100" />
                                  </View>
                                  <Label>Description
                                  </Label>
                                  <Label bindId="Description"></Label>
                            </View>


                </ItemTemplate>
            </Templates>
            <ListSection/>
        </ListView>
    </Window>
</Alloy>
