<Alloy>
    <Window id="Add_Addresswin" backgroundColor="#ededed" class="container1" layout="composite">
        <Widget id="header" top="0" src="header"/>
        <View class="Add_AddressView" layout="vertical" >
          <Label top="50px" class="LabelAddress">ADDRESS</Label>
          <TextArea id="ADDRESS" class="textareaAdd" ></TextArea>
          <Label top="80px" class="LabelAddress">LANDMARK</Label>
          <TextArea id="LANDMARK" class="textareaCity" width="100%"></TextArea>
          <View height="Ti.UI.SIZE" top="80px"   layout="horizontal" >
              <View layout="vertical"  width="47%" height="Ti.UI.SIZE">
                      <Label class="LabelAddress">CITY</Label>
                      <TextArea top="10px" id="CITY" width="100%" class="textareaCity"  ></TextArea>
              </View>
              <View left="40px" layout="vertical"  width="47%" height="Ti.UI.SIZE">
                      <Label class="LabelAddress">STATE</Label>
                      <TextArea top="10px"  id="STATE" class="textareaCity"  width="100%"></TextArea>
              </View>
          </View>
          <View height="Ti.UI.SIZE" top="80px"   layout="horizontal" >
                <View layout="vertical"  width="47%"  height="Ti.UI.SIZE">
                        <Label class="LabelAddress">ZIP CODE</Label>
                        <TextArea top="10px" id="ZIP" class="textareaCity"width="100%"  ></TextArea>
                </View>
                <View left="40px" layout="vertical"  width="47%" height="Ti.UI.SIZE">
                        <Label class="LabelAddress">COUNTRY</Label>
                        <TextArea  top="10px" id="COUNTRY" class="textareaCity"  width="100%"></TextArea>
                </View>
          </View>
          <View top="10px" >
                <Button id="Save_add" class="buttonSave">SAVE ADDRESS</Button>
          </View>
        </View>
    </Window>
</Alloy>
