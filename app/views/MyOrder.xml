<Alloy>
    <Window id="MyOrderwin"  class="container1" layout="vertical">
        <Widget id="header" top="0" src="header"/>
        <ListView id="dynamicListView" onItemclick="itemclick" height="Ti.UI.SIZE">
            <Templates>
                <ItemTemplate name="image_title" height="Ti.UI.SIZE" >
                    <View id="vieworder" layout="vertical" class="adressListView">
                        <Label class="orderId" bindId="orderId"></Label>
                        <Label class="Price" bindId="Price"></Label>
                        <Label class="orderDate" bindId="orderDate"></Label>
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection/>
        </ListView>
    </Window>
</Alloy>
