<Alloy>
	<Window class="container" layout="vertical">

		<Label id="NeoSTORE" class="NeoSTORE" top="100"></Label>

		<View class="view123" top="50">
			<Label class="falabel" text="\uf007"></Label>
			<TextField class="textField123" id="user_name" hintText="UserName"/>
		</View>
		<View class="view123">
			<Label class="falabel" text="\uf0b1"></Label>
			<TextField class="textField123" id="password" passwordMask="true" hintText="PassWord"/>
		</View>
		<View class="buttonContainer" top="100px">
			<Button onClick="check_Login" class="button">LOGIN</Button>
		</View>

		<Label top="21" class="forgotPwd" onClick="GoToForgotPwd">Forgot Password ?</Label>
		<View id="bottom" height="30" top="30%">
			<Label class="dont_Acc">DONT HAVE AN ACCOUNT?</Label>
			<Label class="falabelPlus" onClick="GoToRegister" text="\uf067"></Label>
		</View>
	</Window>
</Alloy>
